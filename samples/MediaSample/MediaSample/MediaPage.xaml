<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MediaSample.MediaPage">
	<ScrollView>
		<StackLayout Spacing="10" Padding="10">
			<StackLayout Orientation="Vertical">
				<Label Text="KEY"></Label>
				<Entry x:Name="apiKey" Text="- APIM API KEY -"></Entry>
			</StackLayout>
			<StackLayout Orientation="Vertical">
				<Label Text="CS"></Label>
				<Entry x:Name="storageCS" Text="- AZURE STORAGE CS -"></Entry>
			</StackLayout>
			<StackLayout Orientation="Vertical">
				<Label Text="VI Account Name"></Label>
				<Entry x:Name="viAccountName" Text="- VI Account Name -"></Entry>
			</StackLayout>
			<StackLayout Orientation="Horizontal" HorizontalOptions="Center">
				<Button x:Name="takeVideo" Text="Take Video"/>
				<Button x:Name="pickVideo" Text="Pick Video"/>
			</StackLayout>
			<Label x:Name="statusLable"></Label>
		</StackLayout>
	</ScrollView>
</ContentPage>